<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="23" author="vmicic">
        <createTable tableName="user">
            <column name="id" type="uuid">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="role">
            <column name="id" type="uuid">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="authority" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="user_authorities">
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="authorities_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_authorities" baseColumnNames="user_id"
                                 constraintName="user_id_user_authorities_fk"
                                 referencedTableName="user" referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="user_authorities" baseColumnNames="authorities_id"
                                 constraintName="authority_id_user_authorities_fk"
                                 referencedTableName="role" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="24" author="vmicic">
