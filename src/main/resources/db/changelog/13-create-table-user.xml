        <insert tableName="user_authorities">
            <column name="user_id" value="0fc3d32a-38c0-457c-b34f-8478fb92f3f4"/>
            <column name="authorities_id" value="5c41d405-9339-4182-bde3-35a969724658"/>
        </insert>

    </changeSet>


</databaseChangeLog>
